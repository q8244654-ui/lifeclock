# Supabase
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
LIFECLOCK_PRICE_ID=price_your_price_id
PAY_COOKIE_SECRET=your-random-long-secret

# Application
NEXT_PUBLIC_BASE_URL=https://lifeclock.quest
# For local development, use: http://localhost:3000
NODE_ENV=development

# Admin Dashboard
NEXT_PUBLIC_ADMIN_ID=admin
# IMPORTANT: ne pas exposer le secret admin côté client
ADMIN_DASHBOARD_PASSWORD=your-admin-password-here

# Resend
RESEND_API_KEY=re_your_resend_api_key
RESEND_FROM_EMAIL=noreply@lifeclock.quest
ADMIN_EMAIL=admin@lifeclock.quest
CRON_SECRET=your-cron-secret-key

# Sentry (optional)
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
SENTRY_DSN=your-sentry-dsn
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# External PDF Hosting (optional)
# If set, PDFs will be served from external URLs instead of local /public/pdfs/
# Option 1: Base URL for all PDFs (e.g., Supabase Storage, S3, Cloudflare R2)
# NEXT_PUBLIC_PDF_BASE_URL=https://xxx.supabase.co/storage/v1/object/public/pdfs
# NEXT_PUBLIC_PDF_BASE_URL=https://yourbucket.s3.amazonaws.com/pdfs
# 
# Option 2: Individual PDF URLs (overrides BASE_URL for specific files)
# NEXT_PUBLIC_PDF_1_URL=https://external-url.com/ebook-1.pdf
# NEXT_PUBLIC_PDF_2_URL=https://external-url.com/ebook-2.pdf
# ... (NEXT_PUBLIC_PDF_3_URL through NEXT_PUBLIC_PDF_10_URL)

